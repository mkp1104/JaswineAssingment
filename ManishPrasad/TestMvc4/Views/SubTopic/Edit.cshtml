@model TestMvc4.Models.SubTopic

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>SubTopic</legend>

        @Html.HiddenFor(model => model.subtopicId)

        <div class="editor-label">
            @Html.LabelFor(model => model.subtopics)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.subtopics)
            @Html.ValidationMessageFor(model => model.subtopics)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.indexId, "Topic")
        </div>
        <div class="editor-field">
            @Html.DropDownList("indexId", String.Empty)
